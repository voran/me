<div id="main" class="container">
    <div id="visualization"></div>
</div>
<div class="container">
    <%= render 'layouts/footer' %>
</div>

<script>
var data = [
    ['Country', 'Relationship'],
    ['Austria', {v: 1, f: 'Visited'}],
    ['Germany', {v: 2, f: 'Lived'}],
    ['United States', {v: 2, f: 'Lived'}],
    ['Czech Republic', {v: 1, f: 'Visited'}],
    ['France', {v: 1, f: 'Visited'}],
    ['Netherlands', {v: 1, f: 'Visited'}],
    ['Norway', {v: 1, f: 'Visited'}],
    ['Greece', {v: 1, f: 'Visited'}],
    ['Bulgaria', {v: 2, f: 'Born'}],
    ['Italy', {v: 1, f: 'Visited'}],
    ['Slovenia', {v: 1, f: 'Visited'}],
    ['Slovakia', {v: 1, f: 'Visited'}],
    ['Croatia', {v: 1, f: 'Visited'}],
    ['Belgium', {v: 1, f: 'Visited'}],
    ['Serbia', {v: 1, f: 'Visited'}],
    ['Hungary', {v: 1, f: 'Visited'}],
    ['Poland', {v: 1, f: 'Visited'}]
];

function drawVisualization() {
    geochart = new google.visualization.GeoChart(document.getElementById('visualization'));
    geochart.draw(google.visualization.arrayToDataTable(data), {width: $("#main").width(), height: $("#main").height(), colorAxis: {minValue: 1, maxValue: 2, colors: ['#4FBF43', '#4381BF']}, legend: 'none'});
}

$(document).ready(function () {
    drawVisualization();
    $(window).resize(function () {
        drawVisualization();
    });
});
</script>